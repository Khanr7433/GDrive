<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.4.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <style>
      .file-card {
        transition: all 0.3s ease;
      }
      .file-card:hover {
        transform: translateY(-2px);
      }
      .aspect-square {
        aspect-ratio: 1 / 1;
      }
    </style>
  </head>
  <body>
    <main class="p-4 bg-gray-100 dark:bg-gray-800 h-screen w-screen">
      <!-- Message Display -->
      <% if (message) { %> <% const isError =
      message.toLowerCase().includes('error') ||
      message.toLowerCase().includes('failed'); const messageClass = isError ?
      'text-red-800 bg-red-100 border border-red-300 dark:bg-red-800
      dark:text-red-100 dark:border-red-600' : 'text-green-800 bg-green-100
      border border-green-300 dark:bg-green-800 dark:text-green-100
      dark:border-green-600'; const iconClass = isError ?
      'ri-error-warning-line' : 'ri-check-circle-line'; const closeButtonClass =
      isError ? 'text-red-600 hover:text-red-800 dark:text-red-200
      dark:hover:text-red-100' : 'text-green-600 hover:text-green-800
      dark:text-green-200 dark:hover:text-green-100'; %>
      <div id="success-message" class="mb-4 p-4 rounded-lg <%= messageClass %>">
        <div class="flex items-center">
          <i class="<%= iconClass %> text-xl mr-2"></i>
          <span><%= message %></span>
          <button
            onclick="hideMessage()"
            class="ml-auto <%= closeButtonClass %>"
          >
            <i class="ri-close-line text-xl"></i>
          </button>
        </div>
      </div>
      <% } %>

      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
          GDrive - Your Files
        </h1>
        <div class="flex gap-3">
          <button
            onclick="showPopUp()"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
          >
            Upload File
          </button>
          <a
            href="/user/logout"
            class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded flex items-center"
          >
            <i class="ri-logout-box-line mr-2"></i>
            Logout
          </a>
        </div>
      </div>

      <div
        class="pop hidden backdrop-blur fixed top-0 left-0 h-screen w-screen flex items-center justify-center z-50"
      >
        <form
          action="/upload"
          method="post"
          enctype="multipart/form-data"
          class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-lg"
        >
          <div class="flex items-center justify-center w-96">
            <label
              for="dropzone-file"
              class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600"
            >
              <div
                id="upload-prompt"
                class="flex flex-col items-center justify-center pt-5 pb-6"
              >
                <svg
                  class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 20 16"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"
                  />
                </svg>
                <p class="mb-2 text-sm text-gray-500 dark:text-gray-400">
                  <span class="font-semibold">Click to upload</span> or drag and
                  drop
                </p>
                <p class="text-xs text-gray-500 dark:text-gray-400">
                  Any file type supported
                </p>
              </div>

              <!-- File Details Section (Initially Hidden) -->
              <div
                id="file-details"
                class="hidden flex flex-col items-center justify-center pt-5 pb-6"
              >
                <i class="ri-file-check-line text-4xl text-green-500 mb-4"></i>
                <div class="text-center">
                  <p
                    id="file-name"
                    class="text-sm font-semibold text-gray-900 dark:text-white mb-1"
                  ></p>
                  <p
                    id="file-size"
                    class="text-xs text-gray-500 dark:text-gray-400 mb-1"
                  ></p>
                  <p
                    id="file-type"
                    class="text-xs text-gray-500 dark:text-gray-400 mb-3"
                  ></p>
                  <button
                    type="button"
                    onclick="clearFileSelection()"
                    class="text-xs text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
                  >
                    Choose different file
                  </button>
                </div>
              </div>

              <input
                id="dropzone-file"
                type="file"
                class="hidden"
                name="file"
                onchange="showFileDetails(this)"
              />
            </label>
          </div>

          <button
            id="upload-btn"
            type="submit"
            class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mt-4 w-full disabled:opacity-50 disabled:cursor-not-allowed"
            disabled
          >
            Select a file to upload
          </button>
        </form>

        <button
          class="absolute top-4 right-4 text-gray-500 dark:text-gray-400 text-xl"
          onclick="hidePopUp()"
        >
          <i class="ri-close-line"></i>
        </button>
      </div>

      <div class="files mt-6">
        <% if (files && files.length > 0) { %>
        <div
          class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4"
        >
          <% files.forEach((file)=>{ %>
          <div
            class="group relative bg-white dark:bg-gray-700 rounded-lg shadow hover:shadow-lg file-card overflow-hidden"
          >
            <!-- File Preview/Icon Container -->
            <div
              class="aspect-square flex items-center justify-center bg-gray-50 dark:bg-gray-600 relative"
            >
              <% const isImage = file.mimetype &&
              file.mimetype.startsWith('image/'); const isPDF = file.mimetype
              === 'application/pdf'; const isVideo = file.mimetype &&
              file.mimetype.startsWith('video/'); const isAudio = file.mimetype
              && file.mimetype.startsWith('audio/'); const isText =
              file.mimetype && (file.mimetype.startsWith('text/') ||
              file.mimetype === 'application/json'); const isArchive =
              file.mimetype && (file.mimetype.includes('zip') ||
              file.mimetype.includes('rar') || file.mimetype.includes('tar'));
              const isDocument = file.mimetype &&
              (file.mimetype.includes('document') ||
              file.mimetype.includes('docx') || file.mimetype.includes('doc'));
              const isSpreadsheet = file.mimetype &&
              (file.mimetype.includes('spreadsheet') ||
              file.mimetype.includes('xlsx') || file.mimetype.includes('xls'));
              const isPresentation = file.mimetype &&
              (file.mimetype.includes('presentation') ||
              file.mimetype.includes('pptx') || file.mimetype.includes('ppt'));
              %> <% if (isImage) { %>
              <!-- Image Preview -->
              <img
                src="/download/<%= file.path %>"
                alt="<%= file.originalname %>"
                class="w-full h-full object-cover"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
              />
              <div class="hidden w-full h-full items-center justify-center">
                <i class="ri-image-line text-4xl text-gray-400"></i>
              </div>
              <% } else if (isPDF) { %>
              <i class="ri-file-pdf-line text-4xl text-red-500"></i>
              <% } else if (isVideo) { %>
              <i class="ri-video-line text-4xl text-purple-500"></i>
              <% } else if (isAudio) { %>
              <i class="ri-music-line text-4xl text-green-500"></i>
              <% } else if (isText) { %>
              <i class="ri-file-text-line text-4xl text-blue-500"></i>
              <% } else if (isArchive) { %>
              <i class="ri-file-zip-line text-4xl text-yellow-600"></i>
              <% } else if (isDocument) { %>
              <i class="ri-file-word-line text-4xl text-blue-600"></i>
              <% } else if (isSpreadsheet) { %>
              <i class="ri-file-excel-line text-4xl text-green-600"></i>
              <% } else if (isPresentation) { %>
              <i class="ri-file-ppt-line text-4xl text-orange-500"></i>
              <% } else { %>
              <i class="ri-file-line text-4xl text-gray-500"></i>
              <% } %>

              <!-- Download button overlay -->
              <div
                class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-all duration-200 flex items-center justify-center"
              >
                <a
                  href="/download/<%= file.path %>"
                  class="opacity-0 group-hover:opacity-100 bg-white bg-opacity-90 hover:bg-opacity-100 text-gray-800 p-2 rounded-full transition-all duration-200 transform scale-75 group-hover:scale-100"
                  download="<%= file.originalname %>"
                  title="Download <%= file.originalname %>"
                >
                  <i class="ri-download-line text-xl"></i>
                </a>
              </div>
            </div>

            <!-- File Info -->
            <div class="p-3">
              <h3
                class="text-sm font-medium text-gray-900 dark:text-white truncate"
                title="<%= file.originalname %>"
              >
                <%= file.originalname %>
              </h3>
              <% if (file.size) { %>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                <%= formatFileSize(file.size) %>
              </p>
              <% } %> <% if (file.createdAt) { %>
              <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">
                <%= new Date(file.createdAt).toLocaleDateString() %>
              </p>
              <% } %>
            </div>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <div class="text-center py-12">
          <i class="ri-folder-open-line text-6xl text-gray-400 mb-4"></i>
          <p class="text-gray-500 dark:text-gray-400 text-lg">
            No files uploaded yet. Click "Upload File" to get started!
          </p>
        </div>
        <% } %>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
    <script>
      function showPopUp() {
        document.querySelector(".pop").classList.remove("hidden");
        // Reset file selection when opening popup
        clearFileSelection();
      }

      function hidePopUp() {
        document.querySelector(".pop").classList.add("hidden");
        // Reset file selection when closing popup
        clearFileSelection();
      }

      function hideMessage() {
        document.getElementById("success-message").style.display = "none";
      }

      function showFileDetails(input) {
        const file = input.files[0];
        if (file) {
          // Show file details section
          document.getElementById("upload-prompt").classList.add("hidden");
          document.getElementById("file-details").classList.remove("hidden");

          // Populate file details
          document.getElementById("file-name").textContent = file.name;
          document.getElementById("file-size").textContent = formatFileSize(
            file.size
          );
          document.getElementById("file-type").textContent =
            file.type || "Unknown type";

          // Enable upload button
          const uploadBtn = document.getElementById("upload-btn");
          uploadBtn.disabled = false;
          uploadBtn.textContent = "Upload file";
          uploadBtn.classList.remove("bg-gray-600", "hover:bg-gray-700");
          uploadBtn.classList.add("bg-blue-600", "hover:bg-blue-700");
        }
      }

      function clearFileSelection() {
        // Clear file input
        document.getElementById("dropzone-file").value = "";

        // Show upload prompt, hide file details
        document.getElementById("upload-prompt").classList.remove("hidden");
        document.getElementById("file-details").classList.add("hidden");

        // Disable upload button
        const uploadBtn = document.getElementById("upload-btn");
        uploadBtn.disabled = true;
        uploadBtn.textContent = "Select a file to upload";
        uploadBtn.classList.remove("bg-blue-600", "hover:bg-blue-700");
        uploadBtn.classList.add("bg-gray-600", "hover:bg-gray-700");
      }

      function formatFileSize(bytes) {
        if (bytes === 0) return "0 Bytes";
        const k = 1024;
        const sizes = ["Bytes", "KB", "MB", "GB"];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + " " + sizes[i];
      }

      // Auto-hide success message after 5 seconds
      setTimeout(() => {
        const message = document.getElementById("success-message");
        if (message) {
          message.style.display = "none";
        }
      }, 5000);

      // Handle drag and drop
      const dropzone = document.getElementById("dropzone-file").parentElement;

      dropzone.addEventListener("dragover", (e) => {
        e.preventDefault();
        dropzone.classList.add(
          "border-blue-500",
          "bg-blue-50",
          "dark:bg-blue-900"
        );
      });

      dropzone.addEventListener("dragleave", (e) => {
        e.preventDefault();
        dropzone.classList.remove(
          "border-blue-500",
          "bg-blue-50",
          "dark:bg-blue-900"
        );
      });

      dropzone.addEventListener("drop", (e) => {
        e.preventDefault();
        dropzone.classList.remove(
          "border-blue-500",
          "bg-blue-50",
          "dark:bg-blue-900"
        );

        const files = e.dataTransfer.files;
        if (files.length > 0) {
          document.getElementById("dropzone-file").files = files;
          showFileDetails(document.getElementById("dropzone-file"));
        }
      });
    </script>
  </body>
</html>
